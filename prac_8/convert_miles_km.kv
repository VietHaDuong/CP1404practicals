BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x = .25
            Button:
                id: up_value
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: down_value
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
    Label:
        id: output_label
        text: '54.717'
        color: (1,1,0,1)
        font_size: 50